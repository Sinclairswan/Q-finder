
<%= form_for :reviews, :url => {:action => "update"}, html:{method:'put'}  do |f| %>
   <p>
    <%= f.label :review %><br>
    <%= f.text_area :review, size: "90x7" %>
  </p>

  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, (1..5) %>
  </p>

  <p >
    <%= f.submit "submit review", class: "btn btn-primary" %>
  </p>
<% end %>